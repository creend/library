generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model User {
    id               Int      @id @default(autoincrement())
    username         String   @unique
    firstName        String
    lastName         String
    idDocumentNumber String
    address          String
    passwordHash     String
    createdAt        DateTime @default(now())
    updatedAt        DateTime @updatedAt
    role             Role     @relation(fields: [roleId], references: [id])
    roleId           Int
    reservedBooks    Book[]   @relation("reserved")
    borrowedBooks    Book[]   @relation("borrowed")

    @@index([roleId])
}

model Role {
    id   Int    @id @default(autoincrement())
    name String @unique
    User User[]
}

model Book {
    id              Int    @id @default(autoincrement())
    author          String
    title           String
    publisher       String
    yearOfRelease   Int
    availableCopies Int
    reservedBy      User[] @relation("reserved")
    borrowedBy      User[] @relation("borrowed")
}
