generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model User {
    id               Int           @id @default(autoincrement())
    username         String        @unique
    firstName        String
    lastName         String
    idDocumentNumber String
    address          String
    passwordHash     String
    createdAt        DateTime      @default(now())
    updatedAt        DateTime      @updatedAt
    role             Role          @relation(fields: [roleId], references: [id])
    roleId           Int
    loggedMinOnceTime Boolean @default(false)
    Reservations     Reservation[]
    Borrowments      Borrowment[]

    @@index([roleId])
}

model Role {
    id   Int    @id @default(autoincrement())
    name String @unique
    User User[]
}

model Book {
    id              Int           @id @default(autoincrement())
    author          String
    title           String
    publisher       String
    yearOfRelease   Int
    availableCopies Int
    Reservations    Reservation[]
    Borrowments     Borrowment[]
}

model Reservation {
    id        Int      @id @default(autoincrement())
    book      Book     @relation(fields: [bookId], references: [id])
    user      User     @relation(fields: [userId], references: [id])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    bookId    Int
    userId    Int

    @@index([userId])
    @@index([bookId])
}

model Borrowment {
    id        Int      @id @default(autoincrement())
    book      Book     @relation(fields: [bookId], references: [id])
    user      User     @relation(fields: [userId], references: [id])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    bookId    Int
    userId    Int

    @@index([userId])
    @@index([bookId])
}
